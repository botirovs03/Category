@page
@model AbbyWeb.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delte Category</h2>
            <hr />
        </div>
    <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
        <input disabled asp-for="@Model.Category.Name" class="form-control"/>
    </div>
    <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
